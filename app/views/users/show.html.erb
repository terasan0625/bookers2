<% if @user_id == current_user.id %>
  <%= render 'books/list', book: @book %>
<% else %>
 <div>
   <%= flash[:notice] %>
 </div>
 <h1>User info</h1>
   <image>
    <% if @user.profile_image.attached? %>
      <%= image_tag @user.profile_image, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
  </image>
  <table>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
 </table>
 <h4>
  <%= link_to(edit_user_path(@user.id) )do %><i class = "fas fa-user-cog"></i><% end %>
 </h4>

 <h1>New book</h1>
 <div id="error_explanation" data-turbo-cache="false">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: @book.errors.count,
                 resource: @book.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
<% end %>

<h1>Books</h1>
   <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book|%>
    <tr>
       <td>
       <%= link_to (user_path(book.user_id)) do %>
         <% if book.user.profile_image.attached? %>
          <%= image_tag book.user.profile_image, size: "200x200" %>
         <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
         <% end %>
       <% end %>
       </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
    </tr>
      <% end %>
 </table>
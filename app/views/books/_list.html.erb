<div>
  <%= flash[:notice] %>
</div>
<h1>User info</h1>
   <image>
    <% if current_user.profileimage.attached? %>
      <%= image_tag current_user.profileimage, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
  </image>
  <table>
    <tr>
      <td>name</td>
      <td><%= current_user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= current_user.introduction %></td>
    </tr>
 </table>
<h4>
  <%= link_to(edit_user_path(current_user.id) )do %><i class = "fa-solid fa-user-gear"></i><% end %>
</h4>
<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>
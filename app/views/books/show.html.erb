<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <% if @book.user_id == current_user.id %>
    <%= render 'books/list', book: @book %>
   <% else %>
    <div>
     <%= flash[:notice] %>
    </div>
    <h2>User info</h2>
    <image>
     <% if @book.user.profile_image.attached? %>
      <%= image_tag @book.user.profile_image, size: "100x100" %>
     <% else %>
      <%= image_tag 'no_image', size: "100x100" %>
     <% end %>
    </image>
    <table class="table">
     <tr>
      <td>name</td>
      <td><%= @book.user.name %></td>
     </tr>
     <tr>
      <td>introduction</td>
      <td><%= @book.user.introduction %></td>
     </tr>
    </table>
    <div class="row">
     <a class="btn btn-outline-secondary btn-block">
      <%= link_to(edit_user_path(@book.user.id) )do %>
       <i class="fas fa-user-cog" aria-hidden="true"></i>
      <% end %>
     </a>
    </div>
    <h2 class="mt-3">New book</h2>
    <% if @book.errors.any? %>
     <div id="error_explanation" data-turbo-cache="false">
      <h2>
       <%= I18n.t("errors.messages.not_saved",
                 count: @book.errors.count,
                 resource: @book.class.model_name.human.downcase)
        %>
      </h2>
      <ul>
       <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
       <% end %>
      </ul>
     </div>
    <%= form_with model: Book.new do |f| %>
     <h4>Title</h4>
     <%= f.text_field :title %>
     <h4>Opinion</h4>
     <%= f.text_area :body %>
     <%= f.submit 'Create Book' %>
    <% end %>
    <% else %>
     <%= form_with model: Book.new do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit 'Create Book' %>
     <% end %>
    <% end %>
   <% end %>
  </div>
 <div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
   <tr>
    <td>
     <% if @book.user.profile_image.attached? %>
      <%= image_tag @book.user.profile_image, size: "80x80" %>
     <% else %>
      <%= image_tag 'no_image', size: "80x80" %>
     <% end %>
    </td>
    <td><%= @book.title %></td>
    <td><%= @book.body %></td>
    <% if @book.user == current_user %>
     <td><%= link_to "Edit", edit_book_path, method: :get, class:'btn btn-success' %></td>
     <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>" 本当に消しますか？" ,class:'btn btn-danger' %></td>
    <% end %>
   </tr>
  </table>
  <span><%= link_to @book.user.name, user_path(@book.user_id) %></span>
  </div>
 </div>
</div>



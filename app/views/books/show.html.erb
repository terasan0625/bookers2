<% if @book.user_id == current_user.id %>
  <%= render 'books/list', book: @book %>
<% else %>
 <div>
   <%= flash[:notice] %>
 </div>
 <h1>User info</h1>
   <image>
    <% if @book.user.profile_image.attached? %>
      <%= image_tag @book.user.profile_image, size: "200x200" %>
    <% else %>
      <%= image_tag 'no_image', size: "200x200" %>
    <% end %>
  </image>
  <table>
    <tr>
      <td>name</td>
      <td><%= @book.user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @book.user.introduction %></td>
    </tr>
 </table>
 <h4>
  <%= link_to(edit_user_path(@book.user.id) )do %><i class = "fas fa-user-cog"></i><% end %>
 </h4>

 <h1>New book</h1>
  <div id="error_explanation" data-turbo-cache="false">
    <h2>
      <%= I18n.t("errors.messages.not_saved",
                 count: @book.errors.count,
                 resource: @book.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  
  <%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Opinion</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>
  <% end %>
<% end %>

<h1>Book detail</h1>
    <%# @book.each do |book| %>
       <image>
        <% if @book.user.profile_image.attached? %>
          <%= image_tag @book.user.profile_image, size: "200x200" %>
        <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
       </image>
       <li><%= @book.title %></li>
       <li><%= @book.body %></li>
       <% if @book.user == current_user %>
        <li><%= link_to "Edit", edit_book_path, method: :get %></li>
        <li><%= button_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" =>" 本当に消しますか？" %></li>
       <% end %>
       <li><%= link_to @book.user.name, user_path(@book.user_id) %></li>
    <%# end %>



<%= render 'books/list' %>
<h1>Books</h1>
   <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    <% @books.each do |book|%>
    <tr>
       <td>
       <% if book.user.profileimage.attached? %>
          <%= image_tag book.user.profile_image, size: "200x200" %>
       <% else %>
          <%= image_tag 'no_image', size: "200x200" %>
       <% end %>
       </td>
       <td><%= link_to book.title, book_path(book.id) %></td>
       <td><%= book.body %></td>
    </tr>
      <% end %>
 </table>
